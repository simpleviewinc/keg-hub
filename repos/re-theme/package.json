{
  "name": "@simpleviewinc/re-theme",
  "version": "1.1.0",
  "description": "Simple Theme switcher / builder for React and React Native",
  "main": "build/cjs/index.js",
  "module": "build/esm/index.js",
  "publishConfig": { 
    "registry": "https://npm.pkg.github.com/" 
  },
  "repository" : {
    "url": "ssh://git@github.com/simpleviewinc/re-theme.git",
    "type": "git"
  },
  "homepage" : "https://simpleviewinc.github.io/re-theme",
  "author": "Lance Tipton",
  "license": "MIT",
  "files": [
    "build/cjs/*",
    "build/esm/*"
  ],
  "scripts": {
    "postinstall": "cd scripts && node postinstall.js",
    "build": "yarn clean:build; rollup -c rollup.config.js",
    "build:app": "cd app; yarn build",
    "clean:build": "rimraf build; mkdir build; mkdir build/cjs; mkdir build/esm; yarn copy:indexes",
    "copy:indexes": "cp ./index.cjs.js build/cjs/index.js; cp ./index.esm.js build/esm/index.js",
    "deploy": "gh-pages -d docs -o upstream",
    "dev": "yarn clean:build; rollup -c rollup.config.js -w",
    "app": "cd app; yarn start",
    "start": "yarn dev",
    "test": "NODE_ENV=test jest --no-cache --verbose",
    "test:reports": "yarn test --coverage && yarn view:reports",
    "view:reports": "open reports/coverage/lcov-report/index.html"
  },
  "devDependencies": {
    "app-root-path": "3.0.0",
    "@babel/core": "7.5.5",
    "@babel/plugin-proposal-class-properties": "7.5.5",
    "@babel/preset-env": "7.5.5",
    "@babel/preset-react": "7.6.3",
    "@rollup/plugin-alias": "2.2.0",
    "babel-jest": "24.9.0",
    "gh-pages": "^2.2.0",
    "jest": "24.7.1",
    "jsutils": "git+https://github.com/lancetipton/jsutils.git#v3.2.1",
    "react": "16.9.0",
    "react-dom": "16.9.0",
    "react-native": "0.61.1",
    "react-native-web": "0.11.7",
    "rimraf": "^3.0.2",
    "rollup": "1.20.3",
    "rollup-jest": "0.0.2",
    "rollup-plugin-babel": "4.3.3",
    "rollup-plugin-cleanup": "3.1.1",
    "rollup-plugin-commonjs": "10.1.0",
    "rollup-plugin-node-resolve": "5.2.0",
    "rollup-plugin-replace": "2.2.0",
    "rollup-plugin-sourcemaps": "0.4.2",
    "rollup-plugin-terser": "5.1.2"
  },
  "peerDependencies": {
    "jsutils": "^git+https://github.com/lancetipton/jsutils.git#v3.2.1",
    "react": "^16.9.0"
  },
  "jest": {
    "preset": "rollup-jest",
    "moduleNameMapper": {
      "ReDimensions": "<rootDir>/src/dimensions/dimensions.web.js",
      "RePlatform": "<rootDir>/src/context/platform.web.js",
      "ReJoinTheme": "<rootDir>/src/cache/joinTheme.web.js"
    },
    "transform": {
      "^.+\\.js$": "babel-jest"
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.js?(x)"
    ],
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "coverageDirectory": "reports/coverage",
    "moduleFileExtensions": [
      "js",
      "json",
      "jsx",
      "es6"
    ],
    "globals": {
      "__DEV__": true
    },
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/setupTests.js"
    ]
  }
}
